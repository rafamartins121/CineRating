@model CineRating.Models.Atores

@{
    ViewBag.Title = "Eliminar Ator";
}


<h3>Tem a certeza que quer eliminar este ator?</h3>
<div>
    <hr />
    @*Apresenta mensagens de erro*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        <h2>@Html.DisplayFor(model => model.Nome)</h2>
        <img src="~/imagens/atores/@Model.Imagem" height="300" />
    </div>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <br />
        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a class="btn btn-default" href="@Url.Action("Index","Atores")">Cancelar</a>
        </div>
    }
</div>
