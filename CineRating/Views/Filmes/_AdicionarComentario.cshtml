@model CineRating.Models.Comentario

@using (Html.BeginForm("Create", "Comentarios")) {

    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.FilmeFK)

    <div class="form-group">
        @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Texto, new { @class = "form-control", maxlength = "500", @style = "resize:none; width:100%; max-width:700px; height:150px;" })
            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
            <br />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar" class="btn btn-default" />
        </div>
    </div>




}
