@model IEnumerable<CineRating.Models.Filmes>

@{
    ViewBag.Title = "Index";
}



@using (Html.BeginForm()) {
    <div style="text-align:center">
        @Html.TextBox("pesq", "", new { @id = "tituloFilme", @autocomplete = "off", @placeholder = "Pesquisar Filmes", style = "width:500px; height:35px; max-width:none;" })
        <input type="submit" class="btn btn-default" value="Pesquisar" style="display:none;" />
    </div>
}


<div style="display:flex; flex-direction:row; flex-wrap:wrap;">
    @foreach (var item in Model) {
        <div style="text-align:center">
            <br />
            <p>@Html.DisplayFor(modelItem => item.Titulo)</p>
            <a href="@Url.Action("Details", "Filmes", new { id = item.ID})">
                <img src="~/imagens/filmes/@item.Imagem" height="500" style="margin:15px;" />
            </a>

        </div>
        
    }
</div>



<link href="~/Content/themes/base/jquery-ui.css"
      rel="stylesheet"
      type="text/css" />


@section Scripts {
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tituloFilme').autocomplete({
                source: '/Filmes/GetFilmes'
            });
        });
    </script>
}

