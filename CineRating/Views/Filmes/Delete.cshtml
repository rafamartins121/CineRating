@model CineRating.Models.Filmes

@{
    ViewBag.Title = "Eliminar Filme";
}

<h2>Eliminar</h2>

<h3>Tem a certeza que quer eliminar este filme?</h3>
<div>
    <hr />
    @*Apresenta mensagens de erro*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        <h2>@Html.DisplayFor(model => model.Titulo)</h2>
        <img src="~/imagens/filmes/@Model.Imagem" height="300" />
    </div>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <br />
        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a class="btn btn-default" href="@Url.Action("Index","Filmes")">Cancelar</a>
        </div>
    }
</div>
